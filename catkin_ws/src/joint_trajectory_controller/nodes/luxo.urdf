<?xml version="1.0"?>

<robot name="Rover Platform">

  <link name="base_link">
  </link>
  <link name="foot_link">
  </link>
  <link name="knee_link">
  </link>
  <link name="ass_link">
  </link>
  <link name="neck_link">
  </link>
  <link name="head_link">
  </link>

  <joint name="foot" type="continuous">
    <parent link="base_link"/>
    <child link="foot_link"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 3.0"/>
  </joint>

  <joint name="knee" type="continuous">
    <parent link="foot_link"/>
    <child link="knee_link"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 5.0"/>
  </joint>

  <joint name="ass" type="continuous">
    <parent link="knee_link"/>
    <child link="ass_link"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 5.0"/>
  </joint>

  <joint name="neck" type="continuous">
    <parent link="ass_link"/>
    <child link="neck_link"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 5.0"/>
  </joint>

  <joint name="head" type="continuous">
    <parent link="neck_link"/>
    <child link="head_link"/>
    <origin rpy="0 0 0" xyz="0.0 0.0 5.0"/>
  </joint>

</robot>

